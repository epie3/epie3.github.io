<div class="col">
  <a href="{% if posts.redirect %}{{ posts.redirect }}{% else %}{{ posts.url | relative_url }}{% endif %}">
    <div class="card h-100 hoverable">
      {% if posts.img %}
        {%
          include figure.liquid
          loading="eager"
          path=posts.img
          sizes = "250px"
          alt="posts thumbnail"
          class="card-img-top"
        %}
      {% endif %}
      <div class="card-body">
        <h2 class="card-title">{{ posts.title }}</h2>
        <p class="card-text">{{ posts.description }}</p>
        <div class="row ml-1 mr-1 p-0">
          {% if posts.github %}
            <div class="github-icon">
              <div class="icon" data-toggle="tooltip" title="Code Repository">
                <a href="{{ posts.github }}"><i class="fa-brands fa-github gh-icon"></i></a>
              </div>
              {% if posts.github_stars %}
                <span class="stars" data-toggle="tooltip" title="GitHub Stars">
                  <i class="fa-solid fa-star"></i>
                  <span id="{{ posts.github_stars }}-stars"></span>
                </span>
              {% endif %}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </a>
</div>